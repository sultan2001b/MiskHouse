<div class="d-flex align-items-center flex-column  "  style="background-image: url('<%= @program.img %>'); background-repeat: no-repeat;background-size: cover; width: 100%;height: 500px;">
<section class="text-center">
  <br>
    <h1 class="text-white "> <%= @program.name %></h1>
  <img src="<%= @program.icon %>">
    <p class="lead  text-white"><%= @program.long_description %></p>
    <div class="mt-auto p-2">
      <div class="row text-white">
        <div class="col">* Students 220</div>
        <div class="col">* Projects 500</div>
        <div class="w-100"></div>
        <div class="col">* 12 Weeks</div>
        <div class="col">* 7 Course</div>
      </div>
    </div>

</section>
</div>

<% if user_signed_in? %>
 <% if current_user.admin %>

  <%= link_to 'Edit', edit_program_path %>
  <%= link_to 'Delete', program_path , method: :delete %>
    <% end %>
<% else %>

<% end %>

<hr/>
<% if user_signed_in? %>
  <% if current_user.admin %>
    <nav>
      <%= link_to 'Add New Course', new_course_path %>
    </nav>
  <% end %>
<% else %>
<% end %>
<h1 style="text-align:center">Courses</h1>
<ul>
  <% @program.courses.each do |c| %>
    <li>
      <%= link_to c.name, course_path(c) %>
    </li>
  <% end %>
</ul>
